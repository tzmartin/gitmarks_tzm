<script type="text/javascript">

	function isUserAgentIE6() {
		var parts = navigator.userAgent.match( /.*MSIE\s+(\d)+\..*;.*/ );
		if ( parts && parts.length >= 2 ) {
			var majorVersion = parts[1];
			if ( majorVersion == 6 ) {
				return true;
			}
		}
		return false;
	}

	function isUserAgentIE7() {
		var parts = navigator.userAgent.match( /.*MSIE\s+(\d)+\..*;.*/ );
		if ( parts && parts.length >= 2 ) {
			var majorVersion = parts[1];
			if ( majorVersion == 7 ) {
				return true;
			}
		}
		return false;
	}

	function isUserAgentIE() {
		var parts = navigator.userAgent.match( /.*MSIE\s+(\d)+\..*;.*/ );
		if ( parts && parts.length >= 2 ) {
			return true;
		}
		return false;
	}
	if ( isUserAgentIE6() ) {
		alert( "Tropo does not support IE6. Please use a newer browser like IE7 or Firefox 3.X." );
	}
	
</script>

