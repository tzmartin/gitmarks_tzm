	<script type="text/javascript">
		
			var so = new SWFObject('/resources/att/mediaplayer/player-licensed.swf','mpl','640','380','9');
		
		so.addParam('allowscriptaccess','sameDomain');
		so.addParam('allowfullscreen','true');
		so.addParam('flashvars','file=http://video2.research.att.com/pub/iptv.flv&dock=true&image=http://video2.research.att.com/pub/iptv.jpg');
		so.write('mediaspace');
	
	  	function play(videoFile,techChannel,techChannelUrl) {
		  so.addParam('allowscriptaccess','sameDomain');
		  so.addParam('allowfullscreen','true');
		  var vflashvars = '';
		  if (videoFile.substring(videoFile.indexOf("."),videoFile.length) == '.mp4'){
			 vflashvars = 'file=' + videoFile.substring(0,videoFile.indexOf("."))+'.flv' + '&plugins=hd-1&hd.file=' + videoFile;
		  }else{
			 vflashvars = 'file=' + videoFile;
		  }
		  vflashvars = vflashvars + '&dock=true' + '&autostart=true&image=' + videoFile.substring(0,videoFile.indexOf("."))+'.jpg';
		  so.addParam('flashvars',vflashvars);
		  so.write('mediaspace');

		  if (techChannel == 'true'){
			divTitle = document.getElementById('TechChannel');
			divTitle.innerHTML = '<div id=\"container8_3_1\" class=\"copy3blue\"><a target=\"_new\" href=\"'+ techChannelUrl +'\">Video from TechChannel <img src=\"/resources/att/images/TC-tech-channel.gif\"  border=\"0\"  /></a></div>';
		  }else{
				divTitle = document.getElementById('TechChannel');
				divTitle.innerHTML = "<div id=\"container8_3_1\"></div>";
		  }
		}
	
		function showText(videoText){
			divTitle = document.getElementById('videoTextId');
			divTitle.innerHTML = "<p class=\"copy2bold\">" + videoText + "</p>";
		}
	</script>	

