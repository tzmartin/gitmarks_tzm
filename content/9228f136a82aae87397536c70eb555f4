							<script language="javascript">
function searchvalidate(k)
{
	//alert("Please select atleast one");	
	//return false;
	if (document.searchfrm.search_type.value=="" ) 	
	{
			alert("Please select atleast one");	
			document.searchfrm.search_type.focus();
			return false;
	}
	if (document.searchfrm.search_keyword.value=="Enter Keyword(s)" || document.searchfrm.search_keyword.value=="") 	
	{
			alert("Please Enter Keyword(s)");	
			document.searchfrm.search_keyword.focus();
			return false;
	}
	else
	{
	//document.searchfrm.subject_category.selectedIndex=0;
	//document.searchfrm.lpp_subject_category.selectedIndex=0;		
	document.searchfrm.searchby.value = document.searchfrm.search_type.value;
	document.searchfrm.search_id.value = document.searchfrm.search_keyword.value;
	document.searchfrm.submit();
	return true;	
	}
}

function sub_cat()
{
	if (document.searchfrm.subject_category.value=="") 	
	{
		alert("Please select subject");	
		document.searchfrm.subject_category.focus();
		return false;
	}	
	//document.searchfrm.lpp_subject_category.selectedIndex=0;
	//document.searchfrm.search_type.selectedIndex=0;
	//document.searchfrm.show_search.selectedIndex=0;
	//document.searchfrm.search_keyword.value="Enter Keyword(s)";
	//document.searchfrm.submit();
	//return true;	
	
	document.searchfrm.searchby.value = "cat";
	document.searchfrm.search_id.value = document.searchfrm.subject_category.value;
	document.searchfrm.submit();
	return false;	
}

function lpp_sub_cat()
{
	/*if (document.searchfrm.lpp_subject_category.value=="") 	
	{
		alert("Please select library power subject");	
		document.searchfrm.lpp_subject_category.focus();
		return false;
	}	*/	
	document.searchfrm.subject_category.selectedIndex=0;
	document.searchfrm.search_type.selectedIndex=0;
	document.searchfrm.show_search.selectedIndex=0;
	document.searchfrm.search_keyword.value=="Enter Keyword(s)";
	document.searchfrm.submit();
	return true;	
}	
</script>

